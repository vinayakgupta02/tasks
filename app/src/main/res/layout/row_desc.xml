<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_feature_parent"
    android:orientation="vertical">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:id="@+id/item_desc_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back_desc_color"
        android:padding="16dp">

        <ImageView
            android:id="@+id/close_desc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_cross" />

        <TextView
            android:id="@+id/item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/close_desc"
            android:fontFamily="sans-serif-condensed"
            android:lineSpacingExtra="4dp"
            android:paddingRight="12sp"
            android:textColor="@color/desc_text_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_desc"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/desc_learn_more"
            android:textColor="@color/pink"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_desc"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/learn_more"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="right"
            android:text="@string/desc_see_more"
            android:textColor="@color/pink"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>